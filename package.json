{
  "name": "prompt-tower",
  "displayName": "prompt-tower",
  "license": "AGPL-3.0",
  "description": "Enhance your development workflow with prompt-tower; designed for seamless prompt engineering and efficient code pasting management. Easily construct complex prompts for leading language models like ChatGPT, Claude, and Gemini, and swiftly maneuver multiple code blocks with our intuitive clipboard integration. Perfect for developers looking to streamline interactions and improve productivity.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prompttower.show",
        "title": "Show Prompt Tower"
      },
      {
        "command": "prompttower.sendMethod",
        "title": "Prompt Tower: Send Class Method"
      },
      {
        "command": "prompttower.sendClass",
        "title": "Prompt Tower: Send Class"
      },
      {
        "command": "prompttower.sendFunction",
        "title": "Prompt Tower: Send Function"
      },
      {
        "command": "prompttower.sendText",
        "title": "Prompt Tower: Send Selection"
      },
      {
        "command": "prompttower.sendFile",
        "title": "Prompt Tower: Send File"
      }
    ],
    "keybindings": [
      {
        "command": "prompttower.show",
        "key": "ctrl+shift+0",
        "mac": "cmd+shift+0"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prompttower",
          "title": "Prompt Tower",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "prompttower": [
        {
          "id": "prompttowerPanel",
          "name": "Prompt Tower"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "prompttower.sendMethod",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "prompttower.sendClass",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "prompttower.sendFunction",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "prompttower.sendText",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "prompttower.sendFile",
          "group": "navigation"
        }
      ]
    }
  },
  "activationEvents": [],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
